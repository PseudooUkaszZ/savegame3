<deviceMapping backends="rawInput;directInput;macosXSdl">
    <productKey productId="3352" vendorId="11FF" />
    <productName vendorId="11FF">
        <!-- key words "pc game controller" are already used in Hama.xml" -->
        <keyword text="speedlink" />
        <keyword text="drift" />
    </productName>
    <category>wheel</category>  <!-- gamepad, wheel, joystick, farmWheel, farmSidePanel -->
    <buttonMappings>
        <buttonMapping physical="0" logical="0" label="X" />
        <buttonMapping physical="2" logical="1" label="A" />
        <buttonMapping physical="3" logical="2" label="B" />
        <buttonMapping physical="1" logical="3" label="Y" />
        <buttonMapping physical="4" logical="5" label="LB"/>
        <buttonMapping physical="5" logical="4" label="RB" />
        <buttonMapping physical="6" logical="7" label="LT" />
        <buttonMapping physical="7" logical="6" label="RT" />
        <buttonMapping physical="8" logical="8" label="Back" />
        <buttonMapping physical="9" logical="9" label="Start" />
        <!-- the buttons X,Y are the same as gear up,down and the buttons LT,RT are also mapped to the trigger buttons -->
    </buttonMappings>
    <axisMappings>
        <axisMapping physical="X" logical="0" scale="1" offset="0" label="RX" />
        <axisMapping physical="Y" logical="10" scale="2" offset="1" label="ACC" />
        <axisMapping physical="Y" logical="11" scale="-2" offset="1" label="BRK" />
    </axisMappings>
</deviceMapping>